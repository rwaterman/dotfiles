[user]
	name = Rick Waterman
	email = rwaterman+noreply@github.com
[core]
	editor = vim
	autocrlf = input
[github]
  user = rwaterman
  email = rwaterman@users.noreply.github.com
[push]
	default = simple
[color]
	ui = auto
[merge]
	tool = vimdiff
[pager]
	branch = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = false
[init]
	defaultBranch = main
